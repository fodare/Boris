@model IEnumerable<FinanceManager.Models.TransactionModel>
@{
    ViewData["Title"] = "Transaction List";
}

<div>
    <h1>Transactions List</h1>
    <hr />
    <table class="table">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Amount)</th>
            <th>@Html.DisplayNameFor(model => model.TransactionDate)</th>
            <th>@Html.DisplayNameFor(model => model.TransactionType)</th>
            <th>@Html.DisplayNameFor(model => model.TransctionNote)</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
    @foreach(var  item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Amount)</td>
            <td>@Html.DisplayFor(modelItem => item.TransactionDate)</td>
            <td>@Html.DisplayFor(modelItem => item.TransactionType)</td>
            <td>@Html.DisplayFor(modelItem => item.TransctionNote)</td>
        </tr>
    }
        </tbody>
    </table>
</div>